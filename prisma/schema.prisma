generator client {
  provider = "prisma-client-js"
}

model PollCreator {
  uid String @id @default(cuid())

  name  String
  email String

  polls Poll[]
}

model Participant {
  uid         String  @id @default(cuid())
  phoneNumber String?

  statements Statement[]
  votes      Vote[]
  flags      Flag[]
}

model Poll {
  uid                        String      @id @default(cuid())
  createdAt                  DateTime    @default(now())
  deleted                    Boolean     @default(false)
  creator                    PollCreator @relation(fields: [creatorId], references: [uid])
  creatorId                  String
  published                  Boolean
  requireSMS                 Boolean     @default(true)
  allowParticipantStatements Boolean     @default(true)

  title       String @default("")
  description String @default("")
  urlSlug     String 

  statements Statement[]
}

model Statement {
  uid           String      @id @default(cuid())
  createdAt     DateTime    @default(now())
  deleted       Boolean     @default(false)
  participant   Participant @relation(fields: [participantId], references: [uid])
  participantId String

  text String

  poll   Poll   @relation(fields: [pollId], references: [uid])
  pollId String

  votes Vote[]
  flags Flag[]
}

model Flag {
  uid           String      @id @default(cuid())
  createdAt     DateTime    @default(now())
  participant   Participant @relation(fields: [participantId], references: [uid])
  participantId String

  statement   Statement @relation(fields: [statementId], references: [uid])
  statementId String
}

enum VoteValue {
  AGREE
  DISAGREE
  PASS
}

model Vote {
  uid           String      @id @default(cuid())
  createdAt     DateTime    @default(now())
  participant   Participant @relation(fields: [participantId], references: [uid])
  participantId String

  voteValue   VoteValue
  statement   Statement @relation(fields: [statementId], references: [uid])
  statementId String
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
